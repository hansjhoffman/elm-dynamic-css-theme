{
  "name": "elm-dynamic-css-theme",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "elm-json": "0.2.10"
  },
  "devDependencies": {
    "elm-live": "4.0.2",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "netlify-cli": "3.37.37",
    "prettier": "2.3.1"
  },
  "scripts": {
    "build": "yarn copy-assets && elm make src/Main.elm --output=dist/js/elm.js --optimize",
    "clean": "rm -rf dist",
    "copy-assets": "yarn clean && cp -R public dist",
    "deploy": "netlify deploy --auth $NETLIFY_AUTH_TOKEN --site $NETLIFY_SITE_ID --dir dist --prod",
    "dev": "yarn copy-assets && elm-live src/Main.elm --port=4000 --dir=dist -- --debug --output=dist/js/elm.js",
    "format:css": "prettier --write 'public/css/*.{css,scss}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "public/css/*.{css,scss}": [
      "prettier --write"
    ],
    "**/*.elm": [
      "elm-format --yes"
    ]
  }
}
